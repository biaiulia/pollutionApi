
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                      String   @id @default(uuid())
  email                   String   @unique
  password                String
  role                    String
  isEmailVerified         Boolean
  expoNotificationsApiKey String?
  subscriptions           Subscription[]
  notifications           Notification[]
}

model Sensor {
  id          String   @id @default(uuid())
  type        String
  location    String
  latitude    Float
  title       String
  longitude   Float
  readings    SensorReading[]
  subscriptions Subscription[]
}


model Subscription {
  id       String @id @default(uuid())
  userId   String
  sensorId String
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  sensor   Sensor @relation(fields: [sensorId], references: [id], onDelete: Cascade)
}

model Notification {
  id        String @id @default(uuid())
  userId    String
  message   String
  dateTime  DateTime
  isRead    Boolean
  user      User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model SensorReading {
  id          String   @id @default(uuid())
  dateTime    DateTime
  PM25        Float?
  PM10        Float?
  PM1         Float?
  temperature Float?
  humidity    Float?
  pressure    Float?
  dayOfWeek   String
  aqiLevel    String?
  sensorId    String
  sensor      Sensor   @relation(fields: [sensorId], references: [id], onDelete: Cascade)
}
